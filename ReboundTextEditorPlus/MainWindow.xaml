<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ReboundTextEditorPlus.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ReboundTextEditorPlus"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <TabView Background="{x:Null}" BorderBrush="{x:Null}" x:Name="TabbedView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AddTabButtonClick="TabbedView_AddTabButtonClick" Margin="0, 8, 0, 0">
            <TabView.TabStripHeader>
                <Grid x:Name="ShellTitlebarInset" Background="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/icon.png" Width="18" Height="18" Margin="12,0,8,0"/>
                    </StackPanel>
                </Grid>
            </TabView.TabStripHeader>
            <TabView.TabStripFooter>
                <Border x:Name="AppTitleBar" MinWidth="200" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="40" Margin="0, -8, 0, 0"/>
            </TabView.TabStripFooter>
            
        </TabView>
    </Grid>
</Window>
